<!DOCTYPE html>
<html lang="en">

<head>
  {{>links}}
</head>

<body>
  <!--NAV BAR-->
  {{>navbar}}
<!--MAIN BODY-->
  <div class="container-fluid main_header">
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
        <div class="row">
          <div class="col-md-12 col-12">
            <div class="main_content">
          <form class="temp_form">
            <input type="text" id="cityName" placeholder="Enter the city name" autocomplete="off">
            <input type="submit" value="search" id="submitBtn">
          </form>
        </div>
        <div class="tempInfo">
          <div class="top_layer">
            <p id="day">Tuesday</p>
            <p id="today_date">13 OCT</p>
          </div>
          <div class="main_layer">
            <p id="city_name">CITY</p>
            <div class="middle_layer data_hide">
              <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
              <p id="temp_status"><i class="fa fa-cloud"></i></p>
            </div>
          </div>
        </div>
          </div> 
        </div>
      </div>
    </div>
  </div>
  <!--FOOTER-->
  {{>footer}}

  <script src="/js/main.js"></script>
</body>

</html>